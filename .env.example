# JARVIS Configuration
# Copy this to .env and fill in your values

# =============================================================================
# GARMIN
# =============================================================================
GARMIN_EMAIL=your.email@example.com
GARMIN_PASSWORD=your_password

# =============================================================================
# WHOOP (OAuth)
# =============================================================================
WHOOP_CLIENT_ID=your_client_id
WHOOP_CLIENT_SECRET=your_client_secret
WHOOP_REDIRECT_URI=http://localhost:8080/callback
# After OAuth flow, these are filled automatically:
WHOOP_ACCESS_TOKEN=
WHOOP_REFRESH_TOKEN=

# =============================================================================
# GOOGLE CALENDAR (OAuth)
# =============================================================================
# Download credentials.json from Google Cloud Console
GOOGLE_CREDENTIALS_FILE=~/.config/jarvis/google_credentials.json
GOOGLE_TOKEN_FILE=~/.config/jarvis/google_token.json

# =============================================================================
# MICROSOFT / OUTLOOK (OAuth)
# =============================================================================
MICROSOFT_CLIENT_ID=your_client_id
MICROSOFT_CLIENT_SECRET=your_client_secret
MICROSOFT_TENANT_ID=your_tenant_id
# Or use 'common' for personal accounts:
# MICROSOFT_TENANT_ID=common

# =============================================================================
# OBSIDIAN
# =============================================================================
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
# Daily notes folder (relative to vault)
OBSIDIAN_DAILY_NOTES_FOLDER=Daily Notes
# Date format for daily note filenames
OBSIDIAN_DAILY_NOTE_FORMAT=%Y-%m-%d

# =============================================================================
# HOME ASSISTANT
# =============================================================================
HOME_ASSISTANT_URL=http://homeassistant.local:8123
HOME_ASSISTANT_TOKEN=your_long_lived_access_token

# =============================================================================
# OPENCLAW
# =============================================================================
# Anthropic API key for Claude (used by OpenClaw)
ANTHROPIC_API_KEY=your_api_key

# =============================================================================
# VOICE (Optional)
# =============================================================================
# Picovoice access key for Porcupine wake word
PICOVOICE_ACCESS_KEY=your_access_key
# Wake word (default: "Hey JARVIS")
WAKE_WORD=jarvis
# Whisper model size: tiny, base, small, medium, large
WHISPER_MODEL=base

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///~/.local/share/jarvis/jarvis.db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# GENERAL
# =============================================================================
# Environment: development, production
ENVIRONMENT=development
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Timezone
TIMEZONE=America/Los_Angeles

# =============================================================================
# RASPBERRY PI (for deployment)
# =============================================================================
PI5_HOST=10.0.0.7
PI5_USER=pi
PI4_HOST=10.0.0.223
PI4_USER=pi
